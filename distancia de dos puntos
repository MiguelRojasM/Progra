// acm1pt.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;

void main()
{	
	float d,x1,x2,y1,y2;
	cout<<"coordenadas del primer punto"<<endl;
	cout<<"x1: ";
	cin>>x1;
	cout<<"y1: ";
	cin>>y1;
	cout<<"coordenadas del segundo punto"<<endl;
	cout<<"x2: ";
	cin>>x2;
	cout<<"y2: ";
	cin>>y2;
	d=sqrt(pow(x2-x1,2)+pow(y2-y1,2));
	cout<<"la distancia entre los dos puntos es: "<<d;
	
	getch ();
}
//////////////////////////////////////////////////////////////////////////////////
Proceso sin_titulo
	Escribir "coordenadas del primer punto"
	Escribir 'x1: '
	Leer x1
	Escribir "y1: "
	Leer y1
	Escribir "coordenadas del segundo punto"
	Escribir "x2: "
	Leer x2
	Escribir "y2: "
	Leer y2
	d<-RC(((x2-x1)^2)+((y2-y1)^2))
	Escribir "la distancia entre los puntos es: ",d
FinProceso
