#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;
float funcion(int N);

void main()
{
	int N, resp,poten;
	cout<<"introducir N: ";
	cin>>N;
	resp=funcion(N);
	cout<<"el resultado es: "<<resp<<endl;
	getch();
}
float funcion(int N)
{	double resp=1,x=1;
	if (N==0)
		resp=1;
	else
		while (x<=N){
		resp=resp*x;
		x=x+1;}
	return resp;
}
