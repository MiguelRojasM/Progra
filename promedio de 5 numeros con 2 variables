	Leer a
	p<-p+a
	Escribir "ingresar tercer valor"
	Leer a
	p<-p+a
	Escribir "ingresar cuarto valor"
	Leer a
	p<-p+a
	Escribir "ingresar quinto valor"
	Leer a
	p<-p+a
	p<-p/5
