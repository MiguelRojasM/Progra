#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;

void main()
{	
	float a,p=0;
	cout<<"ingresar primer valor: ";
	cin>>a;
		p=p+a;
	cout<<"ingresar segundo valor: ";
	cin>>a;
	p=p+a;
	cout<<"ingresar tercer valor: ";
	cin>>a;
	p=p+a;
	cout<<"ingresar cuarto valor: ";
	cin>>a;
	p=p+a;
	cout<<"ingresar quinto valor: ";
	cin>>a;
	p=p+a;
	p=p/5;
	cout<<"el promedio de los cinco valores es: "<<p;
	
	
	getch ();
}
/////////////////////////////////////////////////////////////////
Proceso sin_titulo
