#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;
float suma(int N);

void main()
{
	int N, sum;
	cout<<"introducir la cantidad de numeros a sumar: ";
	cin>>N;
	sum=suma(N);
	cout<<"el valor de la suma es: "<<sum<<endl;
	getch();
}
float suma(int N)
{	double s=0,x=0;
	while (x<=N){
		s=s+pow(x,2);
		x=x+1;}
	return s;
}
