using namespace std;

int palindromo(string frase,int tam);
void main()
{
	int tam;
	cout<<"introducir la cantidad de espacios que ocupa la frase: ";
	cin>>tam;
	string frase;
	int resul;
	cout<<"introducir frase a analizar: "<<endl;
	cin>>frase;
	resul=palindromo(frase,tam);
	if(resul==0)
		cout<<"no es palindromo/capicua"<<endl;
	if(resul==1)
		cout<<"es palindromo/capicua"<<endl;
	getch();
}
int palindromo(string frase,int tam)
{
	int y;
	int x=1;
	for(int i=0;i<tam;i++)
		if(frase[i]!=frase[tam-1])
			x=0;
	return x;
}
